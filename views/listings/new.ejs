<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="col-8 offset-2">
            <br><br>
            <h3> Create a New Listing</h3>
        <div class="mb-3">
         <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Title</div>
         <br>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" type="text"  class="form-control" required></textarea><br>
            <div class="invalid-feedback">Please Enter Valid Description</div>
           
        </div>


        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control" required>
            <br>
        </div>
     <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label" >Price</label>
            <input type ="number" name="listing[price]" placeholder="enter price"  class="form-control" required>
            <div class="invalid-feedback">Please Enter Valid Price</div>
            <br>   
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required><br>
            <div class="invalid-feedback">Please Enter Valid Country</div>
        </div>
     </div>
       

        <div class="mb-+3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" type="text"  class="form-control" required>
            <div class="invalid-feedback">Please Enter Valid Location</div>
            <br>
        </div> 

        <button class="btn btn-dark add-btn">Add</button>
        <br>
        <br>

    </div>
    </form>
</body>
</html>